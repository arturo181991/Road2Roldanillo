<resources>


    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="ratingComment" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_ratingstars</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="fuente_bienvenido">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="fuente_text_bienvenido">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fuente_label_actualizado">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="fuente_label_actualizado_categorias" parent="fuente_label_actualizado">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/bg_categorias</item>
    </style>

    <style name="fuente_label_actualizado_lugares" parent="fuente_label_actualizado">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/bg_lugares</item>
    </style>

    <style name="estilo_imagen_descripcion">
        <item name="android:layout_weight">1</item>
        <item name="android:width">320dp</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="estilo_imagenes">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="estilo_descripcion">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1.2</item>
    </style>

    <style name="button_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">#FD2121</item>
    </style>


</resources>
