<resources>


    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="fuente_bienvenido">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="fuente_text_bienvenido">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fuente_label_actualizado">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="fuente_label_actualizado_categorias" parent="fuente_label_actualizado">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/bg_categorias</item>
    </style>

    <style name="fuente_label_actualizado_lugares" parent="fuente_label_actualizado">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/bg_lugares</item>
    </style>


</resources>
